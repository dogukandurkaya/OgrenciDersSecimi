@model Ogrenci
@{
    ViewData["Title"] = "Create";
}

<h1 class="bg-dark text-light">Yeni Öğrenci</h1>

<div class="row bg-dark text-light">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Öğrenci No</label>
                <input type="text" asp-for="OgrenciNo" class="form-control">
                <label class="control-label">Öğrenci Ad</label>
                <input type="text" asp-for="OgrenciAd" class="form-control">
                <label class="control-label">Öğrenci Soyad</label>
                <input type="text" asp-for="OgrenciSoyAd" class="form-control">
                <label class="control-label">Öğrenci Dönemi</label>
                <input type="text" asp-for="OgrenciDonemi" class="form-control">
                <label class="control-label">Öğrenci Doğum Tarihi</label>
                <input type="date" asp-for="OgrenciDogumTarihi" class="form-control">
                <label class="control-label">Öğrenci Kayıt Tarihi</label>
                <input type="date" asp-for="OgrenciKayitTarihi" class="form-control">
                <label asp-for="BolumId" class="control-label">Öğrenci Bölüm</label>
                <select asp-for="BolumId" class="form-select    form-control" asp-items="ViewBag.Bolum"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Öğrenci Sayfasına Dön</a>